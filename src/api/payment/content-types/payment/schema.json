{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "number": {
      "type": "integer",
      "required": true
    },
    "method": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "cash",
        "card",
        "upi"
      ]
    },
    "payment_status": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "refunded"
      ]
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "orders"
    }
  }
}
